@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Venue>

@{
    ViewData["Title"] = "Venues";
  
}

<h1>Venues</h1>
<p>
<a asp-action="Create" class="btn btn-success">Create New Venue</a>
<a asp-controller="Booking" asp-action="Index" class="btn btn-secondary ms-2">View Bookings</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th>Available</th>
            <th></th>

+        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VenueName</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>             

                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="100" alt="Venue Image" />
                    }
                </td>
                <td>@(item.IsAvailable ? "Yes" : "No")</td>
                <td>
                    <a class="btn btn-sm btn-info" href="/Venue/Details/@item.VenueId">Details</a>
                    <a class="btn btn-sm btn-warning" href="/Venue/Edit/@item.VenueId">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Venue/Delete/@item.VenueId">Delete</a>
                </td>
        </tr>
}
    </tbody>
</table>
