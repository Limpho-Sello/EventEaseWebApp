@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model EventEaseWebApp.Models.Event
@{
    ViewData["Title"] = "Event Details";
}
<h2>Event Details</h2>
<div>
    <h4>@Model.EventName</h4>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Date:</strong> @Model.EventDate.ToShortDateString()</p>
    <p><strong>Type:</strong> @Model.EventType?.Name</p>
  
    <a asp-action="Edit" asp-route-id="@Model.EventId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>