@model Booking
@{
    ViewData["Title"] = "Create Booking";
}
<h2>Create Booking</h2>
<form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-3">

    <div class="col-md-6">
        <label asp-for="BookingDate" class="form-label"></label>
        <input asp-for="BookingDate" class="form-control" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="VenueId" class="form-label"></label>
        <select asp-for="VenueId" class="form-select" asp-items="@(new SelectList(ViewBag.Venues, "VenueId", "VenueName"))"></select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <div style="color:red">@Html.ValidationSummary()</div>
        <a href="/Booking" class="btn btn-secondary">Back</a>
    </div>
</form>

