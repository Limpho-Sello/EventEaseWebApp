@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<EventEaseWebApp.Models.BookingDetailView>
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
     <h5 class="display-4">Event Management</h5>
    <p>Welcome to EventEase online booking app.</p>
</div>

<hr/>
<p>Search to filter bookings...</p>
<form asp-action="Index" method="get" class="row mb-4">
    
        <div class="col-md-3">
            <label>Event Type</label>
            <select name="eventTypeId" class="form-control mr-3">
                <option value="">All</option>
                @foreach (var eventType in ViewBag.EventTypes)
                {
                    <option value="@eventType.Value">@eventType.Text</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <label>From:</label>
            <input type="date" name="startDate" class="form-control mr-3" value="@ViewBag.StartDate" />
        </div>
        <div class="col-md-3">
            <label>To:</label>
            <input type="date" name="endDate" class="form-control mr-3" value="@ViewBag.EndDate" />
        </div>
        <div class="col-md-3">
            <label>Availability</label>
            <select name="isAvailable" class="form-control">
                <option value="">All</option>
                <option value="true" selected="@(ViewBag.IsAvailable == "true")">Available</option>
                <option value="false" selected="@(ViewBag.IsAvailable == "false")">Unavailable</option>
            </select>
        </div>
        <p></p>
        <div class="col-md-3 d-flex align-items-end">
            <label>&nbsp;</label>
            <button type="submit" class="btn btn-primary w-auto form-control">Search</button>
            <a asp-action="Index" class="btn btn-secondary">Clear</a>
        </div>
    
</form>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Booking Date</th>
            <th>Event Date</th>
            <th>Event Name</th>
            <th>Description</th>
            <th>Type</th>
            <th>Venue</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Available</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BookingDate.ToShortDateString()</td>
                <td>@item.EventDate.ToShortDateString()</td>
                <td>@item.EventName</td>
                <td>@item.EventDescription</td>
                <td>@item.EventTypeName</td>
                <td>@item.VenueName</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>
                <td>@(item.IsAvailable ? "Yes" : "No")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Venue Image" width="100" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
